{
  "manifest_version": 3,
  "name": "Pixel Cat Companion",
  "version": "1.0",
  "description": "A friendly pixelated cat that reacts to your browsing activity",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Pixel Cat",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "css": ["styles/cat.css"],
    "js": ["scripts/cat.js"]
  }],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
} 